{
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "outDir": "./dist",
    "rootDir": ".", // index.ts가 루트 폴더에 있다면 "." 또는 파일명을 지정
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true
  },
  "include": ["index.ts"]
}
